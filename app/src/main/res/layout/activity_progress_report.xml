<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.priyanka.pycode.Progress_report">


    <RelativeLayout
        android:id="@+id/show_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/reward" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Result"
            android:textSize="22sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:id="@+id/container1"
        android:layout_width="wrap_content"
        android:layout_below="@+id/show_result"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/correct_answer_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/correct"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:padding="10sp"
            android:text="12/15"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/correct"
            android:text="Correct Answers"
            android:textAlignment="center" />


    </RelativeLayout>
<View
    android:layout_centerInParent="true"
    android:background="@color/colorAccent"
    android:layout_width="1dp"
    android:layout_height="90dp"
    />

    <RelativeLayout
        android:id="@+id/Wrong_answer_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        >

        <TextView
            android:id="@+id/wrong"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:padding="10sp"
            android:text="12/15"
            android:textSize="24sp" />

        <TextView
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wrong"
            android:text="InCorrect Answers"
            android:textAlignment="center" />

    </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/container1"
        android:background="@color/colorAccent" />

<RelativeLayout
    android:layout_below="@+id/container1"
    android:id="@+id/container2"
    android:layout_marginTop="5sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/performance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        >

        <TextView
            android:id="@+id/show_performance"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:padding="10sp"
            android:text="Good"
            android:textSize="24sp" />

        <TextView

            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_performance"
            android:text="Performance"
            android:textAlignment="center" />

    </RelativeLayout>
    <View
        android:layout_centerInParent="true"
        android:background="@color/colorAccent"
        android:layout_width="1dp"
        android:layout_height="90dp"
        />

    <RelativeLayout
        android:id="@+id/percentage_contaiiner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        >

        <TextView
            android:id="@+id/percentege"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:padding="10sp"
            android:text="50%"
            android:textSize="24sp" />

        <TextView
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/percentege"
            android:text="Percentage"
            android:textAlignment="center" />

    </RelativeLayout>

</RelativeLayout>

    <View
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/container2"
        android:background="@color/colorAccent" />


    <RelativeLayout

    android:layout_below="@+id/container2"
    android:id="@+id/container3"
    android:layout_marginTop="5sp"
    android:layout_marginRight="10sp"
    android:layout_marginLeft="10sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/score_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

       >

        <TextView
            android:id="@+id/score"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:padding="10sp"
            android:text="80/100"
            android:textSize="24sp" />

        <TextView
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score"
            android:text="Score"
            android:textAlignment="center" />

    </RelativeLayout>
        <View
            android:layout_centerInParent="true"
            android:background="@color/colorAccent"
            android:layout_width="1dp"
            android:layout_height="90dp"
            />

    <RelativeLayout
        android:id="@+id/high_score_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
       >

        <TextView
            android:id="@+id/high_score"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:padding="10sp"
            android:text="0"
            android:textSize="24sp" />

        <TextView
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/high_score"
            android:text="High Score"
            android:textAlignment="center" />

    </RelativeLayout>


</RelativeLayout>

    <View
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/container3"
        android:background="@color/colorAccent" />

<Button
    android:id="@+id/homebutton"
    android:layout_centerHorizontal="true"
    android:layout_width="120dp"
    android:drawableLeft="@drawable/ic_home_black_24dp"
    android:layout_height="wrap_content"
    android:text="Home"
    android:textColor="#fff"
    android:background="#FFB449"
    android:paddingLeft="10sp"
    android:textSize="18sp"
    android:layout_marginTop="15sp"
   android:layout_marginBottom="2dp"
    android:textAllCaps="false"
    android:layout_alignParentBottom="true"/>

</RelativeLayout>