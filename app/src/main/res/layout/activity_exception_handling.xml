<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#D5EBFE"
    android:layout_height="match_parent"
    tools:context="com.priyanka.pycode.Exception_handling">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_eh"
        android:layout_width="match_parent"
        android:background="#008AFB"
        app:titleTextColor="#fff"
        app:title="Exception Handling in Python"
        android:layout_height="wrap_content"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/exception_handling_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/b"
                android:focusable="true"
                android:foregroundGravity="center"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Exception Handling"
                />

            <Button
                android:id="@+id/exception_clause_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/b"
                android:focusable="true"
                android:foregroundGravity="center"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Exception Clause"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/ad_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="3dp">

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>





</LinearLayout>