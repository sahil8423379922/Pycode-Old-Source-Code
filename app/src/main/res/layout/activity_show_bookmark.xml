<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.priyanka.pycode.showBookmark">

    <androidx.appcompat.widget.Toolbar
        app:title="Bookmark"
        app:titleTextColor="#fff"
        android:background="#0B3657"
        android:id="@+id/bookmark_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.Toolbar>

    <ListView
        android:id="@+id/listview"
        android:layout_below="@+id/bookmark_toolbar"
        android:layout_width="match_parent"
        android:layout_above="@+id/adView"
        android:layout_height="wrap_content"
        />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/l"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3774908939242242/5917946717">
    </com.google.android.gms.ads.AdView>




</RelativeLayout>