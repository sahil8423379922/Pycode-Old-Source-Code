<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#D5EBFE"
    android:layout_height="match_parent"
    tools:context="com.priyanka.pycode.Dictionaries">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_dictionaries"
        android:layout_width="match_parent"
        android:background="#008AFB"
        app:titleTextColor="#fff"
        app:title="Dictionaries in Python"
        android:layout_height="wrap_content"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/dictionary_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/b"
                android:focusable="true"
                android:foregroundGravity="center"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Dictionary in Python"
                />



            <Button
                android:id="@+id/dynamic_allocation_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/b"
                android:focusable="true"
                android:foregroundGravity="center"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Printing Dictionary" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ad_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="3dp">

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/appending_valuse_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/b"
                android:focusable="true"
                android:foregroundGravity="center"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Appending value in Dictionary" />

            <Button
                android:id="@+id/mergibng_dictionary_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/b"
                android:focusable="true"
                android:foregroundGravity="center"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Updating value in Dictionary" />

            <Button
                android:id="@+id/removing_element_dictionary_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/b"
                android:focusable="true"
                android:foregroundGravity="center"
                android:gravity="center"
                android:textAllCaps="false"

                android:text="Removing Item in Dictionary" />






        </LinearLayout>

    </ScrollView>


</LinearLayout>