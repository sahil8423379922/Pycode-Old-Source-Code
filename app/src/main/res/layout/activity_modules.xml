<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5EBFE"
    android:orientation="vertical"
    tools:context="com.priyanka.pycode.Modules">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_modules"
        android:layout_width="match_parent"
        android:background="#008AFB"
        app:titleTextColor="#fff"
        app:title="Modules in Python"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/moules_in_python_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/b"
                android:focusable="true"
                android:foregroundGravity="center"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Modules in Python"
                />

            <Button
                android:id="@+id/importing_modules_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/b"
                android:focusable="true"
                android:foregroundGravity="center"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Importing Modules"
                />

            <Button
                android:id="@+id/math_module_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/b"
                android:focusable="true"
                android:foregroundGravity="center"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Maths Modules" />

            <Button
                android:id="@+id/random_module_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/b"
                android:focusable="true"
                android:foregroundGravity="center"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Random Modules"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/ad_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="3dp">

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>


</LinearLayout>